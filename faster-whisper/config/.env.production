WHISPER_MODEL=large-v3
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=int8
ENABLE_DIARIZATION=true
HF_TOKEN=your_huggingface_token_here

# Entity Recognition (GLiNER)
ENABLE_NER=true

# Smart Formatting (Flan-T5) - DISABLED for now (adds latency)
ENABLE_SMART_FORMAT=false

# Custom vocabulary for better recognition (comma-separated)
# IMPORTANT: Only include unique names that Whisper might mishear
# Do NOT include common words like countries - they cause interference
HOTWORDS=Dudoxx,Walid Boudabbous
